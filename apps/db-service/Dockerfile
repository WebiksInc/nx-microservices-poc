# Build the docker image with `npx nx docker-build db-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t db-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=4202

WORKDIR /app

RUN addgroup --system db-service && \
          adduser --system -G db-service db-service

COPY dist/apps/db-service db-service
RUN chown -R db-service:db-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix db-service --omit=dev -f install

CMD [ "node", "db-service" ]
