# Run the container with `docker run -p 3000:3000 -t tech-shop`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000
ENV ON_START_CONFIG=""

WORKDIR /app

RUN addgroup --system tech-shop && \
          adduser --system -G tech-shop tech-shop

COPY apps/server-template tech-shop

COPY dist/apps/tech-shop tech-shop/dist

WORKDIR /app/tech-shop

RUN chown -R tech-shop:tech-shop .

RUN npm --omit=dev -f install

CMD [ "node", "index.js" ]